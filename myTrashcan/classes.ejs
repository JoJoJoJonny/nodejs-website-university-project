<!DOCTYPE html>
<html>
<head>
    <title>Classes Prof</title>

    <!-- for bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- for icons -->
    <link href="https://cdn.lineicons.com/5.0/lineicons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">


    <!--My style and script-->
    <link href="../public/css/sidebar.css" rel="stylesheet"/>

</head>
<body>
<div class="wrapper d-flex">
    <aside class="col-1">
        <ul class="list-group mt-1 ms-1">
            <li>
                <a href="/profile/prof" class="btn btn-primary w-100 mb-1 m-1 rounded-pill">
                    <span class="material-icons">account_circle</span>
                    <span>Profile</span>
                </a>
            </li>
            <li>
                <a href="/classes" class="btn btn-primary w-100 mb-1 m-1 rounded-pill">
                    <span class="material-icons">school</span>
                    <span>Classes</span>
                </a>
            </li>
            <li>
                <a href="/give_tokens" class="btn btn-success w-100 mb-1 m-1 rounded-pill">
                    <span class="material-icons">local_activity</span>
                    <span>Give Tokens</span>
                </a>
            </li>
            <li>
                <a href="/transactions" class="btn btn-danger w-100 mb-1 m-1 rounded-pill">
                    <span class="material-icons">currency_exchange</span>
                    <span>Transactions</span>
                </a>
            </li>
            <li>
                <a href="/settings" class="btn btn-primary w-100 mb-1 m-1 rounded-pill">
                    <span class="material-icons">settings</span>
                    <span>Settings</span>
                </a>
            </li>
        </ul>
    </aside>

    <section class="col-1"></section>

    <section class="content col-8 p-0">
        <h1>Dati Classi:</h1>

        <form action="/classes" method="post">
            <select name="section">
                <%sections.forEach(s=>{%>
                <option value="<%=s.section%>"><%=s.section%></option>
                <%});%>
            </select>

            <select name="subject">
                <option value="all">All</option>
                <%subjects.forEach(s=>{%>
                <option value="<%=s.subject%>"><%=s.subject%></option>
                <%});%>
            </select>

            <button type="submit">Filtra</button>
        </form>

        <%if(typeof students != "undefined" && students){
        // Raggruppiamo gli studenti per classe/section
        const grouped = {};

        students.forEach(student => {
            if (!grouped[student.class]) {
                grouped[student.class] = [];
            }
            grouped[student.class].push(student);
        });
        %>

        <% Object.keys(grouped).forEach(section => { %>
            <h1>Classe <%= section %></h1>
            <table class="table table-striped table-hover w-100">
                <thead>
                <tr>
                    <% Object.keys(grouped[section][0]).forEach(col => { %>
                        <th><%= col %></th>
                    <% }) %>
                </tr>
                </thead>
                <tbody>
                <% grouped[section].forEach(student => { %>
                    <tr>
                        <% Object.values(student).forEach(value => { %>
                            <td><%= value %></td>
                        <% }) %>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        <% }) }%>
    </section>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
